<head>
    <title><%= userInvite.title %> <%= orgName %></title>
    <style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Roboto+Mono:ital,wght@0,100..700;1,100..700&display=swap');
    </style>
</head>
<body style="margin: 0;">
    <span style="display: none;"></span>
    <div style="background-color: <%= theme.highlightBg %>; width: 100%; min-height: 100%; font-family: 'Poppins', 'Arial', 'Helvetica Neue', 'Helvetica', sans-serif;box-sizing: border-box; padding-bottom: 25px; margin: 0;">
      <div style="background: transparent; padding-top: 30px; padding-bottom: 20px; text-align: center;">
        <img style="display: inline-block; height: 50px; width: auto; margin-left: auto; margin-right: auto;" alt="Logo" src="http://via.placeholder.com/400x120/fafafa/000?text=Logo"/>
      </div>
      <div style="background-color: #fff; color: #000; font-size: 1em; border-top: 2px solid <%= theme.primaryDarkerColor %>; border-bottom: 1px solid #E6E6E6; box-sizing: border-box; padding: 25px; width: 100%; max-width: 600px; margin-left: auto; margin-right: auto;">

        <p style="margin-bottom: 25px; font-weight: bold;"><%= userInvite.welcome %> <%= fullName %></p>
        <p style="margin-bottom: 25px;"><%= userInvite.invited %> <b><%= orgName %></b>,</p>
        <p style="margin-bottom: 25px;"><%= userInvite.process %></p>
        <div style="margin-bottom: 25px; text-align: center;">
          <a style="background-color: <%= theme.primaryDarkerColor %>; display: inline-block; font-size: 1.1em; color: #fff; padding: 10px 35px 10px; font-weight: 500; text-decoration: none; border-radius: 7px;" target="_blank" href="<%= acceptInviteURL %>"><%= userInvite.button %></a>
        </div>
        <p style="margin-bottom: 25px;"><%= userInvite.alternative %><br/> <a style="color: <%= theme.primaryColor %>; word-wrap: break-word;" target="_blank" href="<%= acceptInviteURL %>"><%= acceptInviteURL %></a></p>

        <div style="margin-top: 40px;">
            <p style="margin-bottom: 5px; font-style: italic; text-align: right;"><%= userInvite.greets %></p>
            <p style="margin-top: 0px; font-style: italic; text-align: right;"><%= userInvite.team %> <%= appName %></p>
        </div>

      </div>
      <div style="text-align: center; padding-top: 15px; margin-bottom: 15px; font-size: 12px;">
        <a style="color: <%= theme.primaryDarkerColor %>;" href="<%= helpURL %>"><%= footer.help %></a>
        <span style="color: #ccc;">&nbsp;&nbsp;|&nbsp;&nbsp;</span>
        <a style="color: <%= theme.primaryDarkerColor %>;" href="<%= faqURL %>"><%= footer.faq %></a>
        <span style="color: #ccc;">&nbsp;&nbsp;|&nbsp;&nbsp;</span>
        <a style="color: <%= theme.primaryDarkerColor %>;" href="<%= tosURL %>"><%= footer.terms %></a>
        <span style="color: #ccc;">&nbsp;&nbsp;|&nbsp;&nbsp;</span>
        <a style="color: <%= theme.primaryDarkerColor %>;" href="<%= privacyURL %>"><%= footer.privacy %></a>
      </div>
      <p style="color: #777777; padding: 0 25px; max-width: 400px; box-sizing: border-box; margin-left: auto; margin-right: auto; font-size: 10px; text-align: center;"><%= footer.contact %> <a style="color: <%= theme.primaryColor %>;" href="<%= contactURL %>"><%= footer.contactLink %></a></p>
    </div>
</body>