{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "plugins": [
      {
        "name": "@nestjs/swagger",
        "options": {
          "dtoFileNameSuffix": [".dto.ts", ".entity.ts", ".schema.ts"]
        }
      }
    ],
    "assets": [
      {
        "include": "../views",
        "outDir": "dist/views",
        "watchAssets": true
      },
      { "include": "i18n/**/*",
        "outDir": "dist/src",
        "watchAssets": true }
    ],
    "watchAssets": true
  }
}
